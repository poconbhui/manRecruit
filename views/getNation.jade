extends layout

block headers
  script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")
  style
    * {
      box-sizing:border-box;
      -moz-box-sizing:border-box;
      -webkit-box-sizing:border-box;
    }
    body, html, #main {
      width:100%;
      height:100%;
      margin:0;
      padding:0;
      border:none;
    }
    table, tbody, tr, td {
      border-spacing:0;
      margin:0;
      padding:0;
      border:none;
    }
    .forms {
      height:5%;
    }
    .newNation, .newNationName, .error, .count, .online {
      width: 20%;
      float: left;
    }
    #nationFrameWrap {
      margin:0;
      padding:0;
      height:100%;
      width:100%;
      border:none;
    }
    #nationFrame {
      margin:0;
      padding:0;
      border:none;
      width:100%;
      height:99%;
    }

block content
  table#main
    tr
      td.forms
        div
          a(href="/") Return to index
          =' '
          a(href="/logout") Logout

        div
          form.newNation(method='post', action=''+action)
            input(type='submit', value='Get Nation')

          - if(typeof(nation) != 'undefined')
            .newNationName
              | nation: #{nation}

          - if(typeof err != 'undefined')
            .error
              | error: #{JSON.stringify(err)}

          .count
            | count: #{count}

          .online
            | online: #{online}

    tr
      td
        #nationFrameWrap
          iframe#nationFrame(src="http://www.nationstates.net/nation=#{nation}")
