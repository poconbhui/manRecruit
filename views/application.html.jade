doctype 5
html.no-js( lang="en" )
  head
    title manRecruit
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1.0"
    )
    !=css('application')
    //if lt IE 9
      script(src="//html5shim.googlecode.com/svn/trunk/html5.js")
    script(type="text/javascript")
      document.documentElement.className =
        document.documentElement.className.replace(/\bno-js\b/,'js');

    block headers

  body
    header.navbar.navbar-static-top
      .navbar-inner
        .container
          a.brand(href="/") manRecruit

          a.btn.btn-navbar(
            data-toggle="collapse",
            data-target=".nav-collapse"
          )
            span.icon-bar
            span.icon-bar
            span.icon-bar

          .nav-collapse.collapse
            ul.nav
              - if(typeof nationSource == 'undefined') nationSource = null
              li(class=(nationSource === 'feeder'? "active":null))
                a(href="/nations/feeder/new")
                  | New Nations (#{recruitableCount.feeder})
              li(class=(nationSource === 'sinker'? "active":null))
                a(href="/nations/sinker/new")
                  | Refounded Nations (#{recruitableCount.sinker})
            ul.nav.pull-right
              if signed_in
                li
                  p.navbar-text Hi #{username}! (#{recruitedCount})
              li
                a(href="/logout") Logout
          
    section.container
      block content

    //- Put JavaScript at the end for super mega fast super load
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    !=js('application')
