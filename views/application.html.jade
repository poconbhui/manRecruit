doctype 5
html
  head
    title manRecruit
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1.0"
    )
    link(
      href="/static/css/bootstrap.min.css",
      rel="stylesheet",
      type="text/css"
    )
    link(
      href="/static/css/bootstrap-responsive.min.css",
      rel="stylesheet",
      type="text/css"
    )
    style
      html, body{
        height: 100%;
      }
      .navbar-text{
        padding: 0 20px;
      }
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")

    block headers

  body
    div.container
      div.navbar
        div.navbar-inner
          a.brand(href="/") manRecruit
          ul.nav
            li
              a(href="/nations/feeder/new") Feeders recruitable #{recruitableCount.feeder}
            li
              a(href="/nations/sinker/new") Sinkers recruitable #{recruitableCount.sinker}
            li.navbar-text Recruited #{recruitedCount}
          ul.nav.pull-right
            if signed_in
              li
                span.navbar-text Hi #{username}!
            li
              a(href="/logout") Logout
          
      block content
