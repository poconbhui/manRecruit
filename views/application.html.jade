doctype 5
html
  head
    title manRecruit
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1.0"
    )
    link(
      href="/static/css/bootstrap.min.css",
      rel="stylesheet",
      type="text/css"
    )
    link(
      href="/static/css/bootstrap-responsive.min.css",
      rel="stylesheet",
      type="text/css"
    )
    style
      html, body {
        height: 100%;
      }
      .navbar-text {
        padding: 0 20px;
      }
      .margin-auto {
        margin: auto;
      }
      .center-text {
        text-align: center;
      }
      .require-js {
        display: none;
      }
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(src="/static/js/bootstrap.min.js")
    script(src="/static/js/jquery.cookie.js")
    script(type="text/javascript", src="/static/js/jquery.TG_autofill.js")
    script(type="text/javascript")
      $(function(){ $('.require-js').show(); });

    block headers

  body
    .navbar
      .navbar-inner
        .container
          a.brand(href="/") manRecruit

          a.btn.btn-navbar(
            data-toggle="collapse",
            data-target=".nav-collapse"
          )
            span.icon-bar
            span.icon-bar
            span.icon-bar

          .nav-collapse.collapse
            ul.nav
              - if(typeof nationSource == 'undefined') nationSource = null
              li(class=(nationSource === 'feeder'? "active":null))
                a(href="/nations/feeder/new")
                  | New Nations (#{recruitableCount.feeder})
              li(class=(nationSource === 'sinker'? "active":null))
                a(href="/nations/sinker/new")
                  | Refounded Nations (#{recruitableCount.sinker})
            ul.nav.pull-right
              if signed_in
                li
                  span.navbar-text Hi #{username}! (#{recruitedCount})
              li
                a(href="/logout") Logout
          
    .container
      block content

